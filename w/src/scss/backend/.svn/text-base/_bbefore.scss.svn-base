.bindex-Header {
    position: fixed;
    height: 70px;
    line-height: 70px;
    width: 100%;
    // background-color: rgba($color: #fff, $alpha: 0.3);
    color: #fff;
    z-index: 1;
    .logotitle {
        width: 40%;
        float: left;
        padding-left: 20px;
    }
    .operation {
        float: right;
        width: 50%;
        text-align: right;
        a {
            height: 100%;
            padding: 0 20px;
            display: inline-block;
            i {
                margin-right: 5px;
            }
            color: #fff;
            &:nth-child(1) {
                margin-right: 50px;
            }
            &:nth-child(2) {
                // margin-right: 50px;
            }
            &:hover{
                background-color: rgba($color: #fff, $alpha: 0.3);
                
            }
            &.active {
                background-color: rgba($color: #fff, $alpha: 0.3);
            }
        }
    }
}

#bfnav {
    position: fixed;
    top: 50%;
    right: 10%;
    transform: translateY(-50%);
    z-index: 1;
    a {
        display: block;
        width: 10px;
        border-radius: 50%;
        height: 10px;
        border: 2px solid rgba(#fff, .7);
        margin-bottom: 10px;
        transition: all .3s;
        &:hover {
            background-color: #fff;
        }
    }
    li.active {
        a {
            background-color: #fff;
        }
    }
}

#fullpage {
    section {
        z-index: -1;
    }
    .fp-tableCell {
        z-index: 2;
        background-color: rgba(#000, .3)
    }
    #section0 {
        background: url('/img/backend/s1.png') no-repeat;
        background-size: cover;
        .intro {
            h1 {
                color: #fff;
                font-size: 50px;
                text-align: center;
            }
        }
    }
    %introDesc {
        .introDesc {
            width: 40%;
            margin: 0 auto;
            text-align: left;
        }
        h1 {
            color: #fff;
            font-size: 50px;
        }
        p {
            color: #fff;
            font-size: 16px;
            line-height: 30px;
            margin-top: 20px;
        }
    }
    #section1 {
        background: url('/img/backend/s2.jpg') no-repeat;
        background-size: cover;
        .intro {
            @extend %introDesc;
        }
    }
    #section2 {
        background: url('/img/backend/s3.png') no-repeat;
        background-size: cover;
        .intro {
            @extend %introDesc;
        }
    }
}