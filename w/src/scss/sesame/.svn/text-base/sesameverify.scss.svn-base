@import '../common/base.scss';
@import '../common/button.scss';
.content {
    background-color: #eee;
}

.mt15 {
    margin-top: 15px;
}

.tips {
    margin: 15px;
    font-size: 12px;
}

.flows {
    padding: 20px;
    .item {

        margin-right: 20px;
        text-align: center;
        span:nth-child(1) {
            margin-bottom: 8px;
        }
        &:last-child{
            margin-right: 0;
        }
    }
    .circle {
        display: inline-block;
        padding: 10px 14px;
        border-radius: 100%;
        text-align: center;
        background-color: #e3e2e2;
        color: #fff;
        &.active {
            background-color: #00c68d;
        }
    }
    .text {
        font-size: 12px;
    }
}

.maindata {
    >div {
        padding: 15px 15px;
        border-bottom: 1px solid #eee;
        background-color: #fff;
    }
    .title {
        width: 30%;
        white-space: nowrap;
    }
    select {
        width: 100%;
        border: none;
        font-size: 14px;
        background: url('/img/common/drop.png?__inline') no-repeat right;
        background-size: 13px 8px;
        padding-right: 14px;
        text-align: right;
        option {
            text-align: right
        }
    }
    .item {
        font-size: 14px;
        .title {
            width: 45%;
            padding-right: 15px;
            text-align: right;
            font-size: 14px;
        }
        input {
            width: 100%;
            border: none;
            outline: none;
            font-size: 14px;
        }
    }
}

.submitdiv {
    margin: 40px 15px 0 15px;
    padding-bottom: 15px;
    button {
        @include submitbtn(#00c68d);
    }
}